<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowSearchSelectActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/e_dog_back"
            android:clickable="true"
            android:onClick="SearchNearby" />

        <EditText
            android:id="@+id/et_SearchNearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="99"
            android:drawableLeft="@drawable/default_common_searchicon_icon_normal"
            android:hint="附近搜索"
            android:singleLine="true" >
        </EditText>

        <Button
            android:id="@+id/bt_SearchNearby"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:background="@drawable/search_selector"
            android:onClick="SearchNearby" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.6"
        layout="@layout/include_show_search_select" />

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.4"
        layout="@layout/include_show_search_select2" />

</LinearLayout>