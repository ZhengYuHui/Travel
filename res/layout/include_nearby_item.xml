<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_itemNum_in"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:background="@color/index_2"
        android:gravity="center"
        android:padding="4dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_name_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_itemNum_in"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tv_itemNum_in"
        android:singleLine="true"
        android:text="申通快递（私立华联大学站点）"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tv_address_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_in"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tv_itemNum_in"
        android:padding="3dp"
        android:singleLine="true"
        android:text="新景路88号"
        android:textColor="@color/qianhui_AA66"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_address_in"
        android:background="@color/qianhui_88" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address_in"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_1_in"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/route_exchange_background"
            android:clickable="true"
            android:gravity="center"
            android:onClick="topOnClick"
            android:text="路线"
            android:textColor="@color/qianhui_66"
            android:textSize="19sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/qianhui_88" />

        <TextView
            android:id="@+id/tv_2_in"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/route_exchange_background"
            android:clickable="true"
            android:gravity="center"
            android:onClick="topOnClick"
            android:text="电话"
            android:textColor="@color/qianhui_66"
            android:textSize="19sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/qianhui_88" />

        <TextView
            android:id="@+id/tv_3_in"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/route_exchange_background"
            android:clickable="true"
            android:gravity="center"
            android:onClick="topOnClick"
            android:text="详情"
            android:textColor="@color/qianhui_66"
            android:textSize="19sp" />
    </LinearLayout>

</RelativeLayout>